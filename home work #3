#include <iostream>
using namespace std;

int main() {
	int num;
	setlocale(LC_ALL, "ru");
	cout << "The program finds the sum of even numbers\n";
	cout << "Enter data: ";
	cin >> num;
	if (num == 1)
		cout << "1 cannot be prime or composite";
	else if ((num % 3 == 0 || num % 2 == 0) && num != 2 && num != 3)
		cout << num << " - is a composite number";
	else
		cout << num << " - is a prime number";

	return 0;
}
